<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageButton
        android:id="@+id/play_pause_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/play_button"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/play_pause_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_centerVertical="true"
        android:tickMarkTint="@color/light_purple"
        android:thumbTint="@color/yellow"/>

    <TextView
        android:id="@+id/progressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_alignBottom="@id/play_pause_button"
        android:layout_marginBottom="-4dp"
        android:text="0:00 / 0:00"
        android:layout_marginEnd="16dp"/>

    <ImageButton
        android:id="@+id/delete_audio_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_alignBottom="@id/play_pause_button"
        android:layout_alignEnd="@id/replace_audio_button"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="-4dp"
        android:src="@drawable/delete_content_button"/>

    <ImageButton
        android:id="@+id/replace_audio_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_alignBottom="@id/play_pause_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="-4dp"
        android:src="@drawable/replace_content_button"/>

</RelativeLayout>